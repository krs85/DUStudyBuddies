<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:padding="30dp"
    android:id="@+id/createGroupRoot"
    tools:context="com.shemeshapps.drexelstudybuddies.Activities.CreateGroupActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grp_name"
        android:layout_marginTop="0dp"

        android:hint="Study Group Name"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:id="@+id/date_txt"

        android:layout_marginTop="0dp"
        android:hint="Date"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start_time_txt"

        android:hint="Start Time"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:id="@+id/end_time_txt"

        android:hint="End Time"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_txt"

        android:layout_marginTop="0dp"
        android:hint="Location and Room" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/course_txt"
        android:singleLine="true"
        android:hint="Course eg: cs101" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc_txt"
        android:singleLine="false"
        android:lines="5"
        android:gravity="top"
        android:hint="Description/Notes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submit_grp_btn"
        android:text="Create Group"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

</LinearLayout>
