<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.shemeshapps.drexelstudybuddies.Activities.CreateGroupActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/date_txt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:text="date" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/start_time_txt"
        android:layout_below="@+id/date_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="start time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/end_time_txt"
        android:layout_below="@+id/start_time_txt"
        android:layout_alignRight="@+id/start_time_txt"
        android:layout_alignEnd="@+id/start_time_txt"
        android:text="end time" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/date_btn"
        android:layout_above="@+id/start_time_txt"
        android:layout_toRightOf="@+id/date_txt"
        android:layout_toEndOf="@+id/date_txt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_btn"
        android:layout_above="@+id/end_time_txt"
        android:layout_toRightOf="@+id/date_txt"
        android:layout_toEndOf="@+id/date_txt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:id="@+id/end_btn"
        android:layout_alignBottom="@+id/end_time_txt"
        android:layout_toRightOf="@+id/start_time_txt"
        android:layout_toEndOf="@+id/start_time_txt" />
</RelativeLayout>
